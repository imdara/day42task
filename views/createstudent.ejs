<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
      <div class="container" id="studentForm">
        <h4>Add Student</h4>
        <form action="/students" method="post">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
          <label for="age" class="form-label">Age</label>
          <input
            type="number"
            class="form-control"
            id="age"
            name="age"
            required
          /><br />
          <label for="mentor" class="form-label">Choose a mentor:</label>
          <select
            class="form-select"
            aria-label="Default select example"
            id="mentor"
            name="mentor"
            required
          >
            <option value="" selected>Select a mentor</option>
            <% data.map((mentor) => { %>
            <option value="<%=mentor.name%>"><%= mentor.name %></option>
            <% }); %>
          </select>
          <br />
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <br />
    </div>
  </body>
</html>
